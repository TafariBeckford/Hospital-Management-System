@model IEnumerable<HMS.Models.Diagnosis>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Patient.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClinicalRemarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InitialDiagnosis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondDiagnosis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThirdDiagnosis)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClinicalRemarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InitialDiagnosis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondDiagnosis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThirdDiagnosis)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
